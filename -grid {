[32m+[m[32m  function attachEventHandlers() {[m
[32m+[m[32m    const links = document.querySelectorAll('.nav-link:not([data-events-attached])');[m
[32m+[m[32m    const cardDecks = document.querySelectorAll('.card-deck');[m
