[32m+[m[32m    links.forEach((link, index) => {[m
[32m+[m[32m      link.dataset.eventsAttached = 'true'; // Mark this element as having events attached[m
[32m+[m[32m      link.addEventListener('click', (event) => {[m
[32m+[m[32m        event.preventDefault();[m
[32m+[m[32m        document.querySelectorAll('.nav-link').forEach((link) => link.classList.remove('active'));[m
[32m+[m[32m        document.querySelectorAll('.card-deck').forEach((cardDeck) => cardDeck.classList.add('d-none'));[m
[32m+[m[32m        link.classList.add('active');[m
[32m+[m[32m        cardDecks.classList.remove('d-none');[m
[32m+[m[32m      });[m
[32m+[m[32m    });[m
[32m+[m[32m  }[m
